{
  "name": "project_capm",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/http-client": "^3.22.1",
    "@sap/cds": "^8.1.1",
    "@sap/cds-hana": "^2",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21",
    "@sap/hdi-deploy": "^5.0.1",
    "@sap/xsenv": "^5.3.0",
    "@sap/xssec": "^2.2.5",
    "axios": "^1.6.5",
    "basic-auth": "^2.0.1",
    "express": "^4.18.2",
    "passport": "^0.7.0",
    "sql": "^0.78.0"
  },
  "scripts": {
    "start": "cds-serve",
    "undeploy": "cf undeploy sbp_hire --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "hana": {
      "deploy-format": "hdbtable",
      "syntax": "hdi"
    },
    "build": {
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf"
        }
      ]
    },
    "requires": {
      "db": {
        "kind": "sql"
      },
      "data": {
        "model": "db/quotation.cds"
      },
      "cap_servs": {
        "kind": "odata-v2",
        "model": "srv/external/cap_servs",
        "[development]": {
          "credentials": {
            "url": "https://sbpbtp-vcpprovider-sc0jeojq-dev-cap-servs-srv.cfapps.us10.hana.ondemand.com/v2/catalog"
          }
        },
        "[production]": {
          "credentials": {
            "destination": "cap_servs",
            "path": "v2/catalog"
          }
        }
      }
    }
  },
  "devDependencies": {
    "@sap/cds-dk": "^7",
    "rimraf": "^3.0.2",
    "sqlite3": "^5.1.7"
  }
}
